@model  Product
    <div class="card card-outline-primary bg-success m-3 p-1">
        <div class="bg-light p-1">
            <h4>
                @Model.Name
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>Price: @Model.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text font p-2 ">@Model.Description</div>
    </div>